<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.hnu.csappdemo.dao.UserdemoDao">

    <resultMap type="edu.hnu.csappdemo.entity.Userdemo" id="UserdemoMap">
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="pwd" column="pwd" jdbcType="VARCHAR"/>
        <result property="num" column="num" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserdemoMap">
        select
          uid, name, pwd, num
        from userdemo
        where uid = #{uid}
    </select>
    <!--查询单个-->
    <select id="queryByNameAndPWD" resultMap="UserdemoMap">
        select
            uid, name, pwd, num
        from userdemo
        where name = #{username} and pwd= #{PWD}
    </select>
    <!--查询单个-->
    <select id="queryByName" resultMap="UserdemoMap">
        select
            uid, name, pwd, num
        from userdemo
        where name = #{username}
    </select>
    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserdemoMap">
        select
          uid, name, pwd, num
        from userdemo
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="pwd != null and pwd != ''">
                and pwd = #{pwd}
            </if>
            <if test="num != null">
                and num = #{num}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from userdemo
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="pwd != null and pwd != ''">
                and pwd = #{pwd}
            </if>
            <if test="num != null">
                and num = #{num}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="uid" useGeneratedKeys="true">
        insert into userdemo(name, pwd, num)
        values (#{name}, #{pwd}, #{num})
    </insert>

    <insert id="insertBatch" keyProperty="uid" useGeneratedKeys="true">
        insert into userdemo(name, pwd, num)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.name}, #{entity.pwd}, #{entity.num})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="uid" useGeneratedKeys="true">
        insert into userdemo(name, pwd, num)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.pwd}, #{entity.num})
        </foreach>
        on duplicate key update
        name = values(name),
        pwd = values(pwd),
        num = values(num)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update userdemo
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="pwd != null and pwd != ''">
                pwd = #{pwd},
            </if>
            <if test="num != null">
                num = #{num},
            </if>
        </set>
        where uid = #{uid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from userdemo where uid = #{uid}
    </delete>

</mapper>

